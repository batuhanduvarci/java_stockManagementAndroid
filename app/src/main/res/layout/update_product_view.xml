<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/productCodeTxtUpd"
        android:hint="Ürün Kodu"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#d3d3d3"
        android:textCursorDrawable="@drawable/cursor_color"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/productNameTxtUpd"
        android:hint="Ürün Adı"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#d3d3d3"
        android:textCursorDrawable="@drawable/cursor_color"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/productionDateTxtUpd"
        android:hint="Üretim Tarihi"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#d3d3d3"
        android:textCursorDrawable="@drawable/cursor_color"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/consumeDateTxtUpd"
        android:hint="Son Tüketim Tarihi"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#d3d3d3"
        android:textCursorDrawable="@drawable/cursor_color"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/quantityTxtUpd"
        android:hint="Adet"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#d3d3d3"
        android:textCursorDrawable="@drawable/cursor_color"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/priceTxtUpd"
        android:hint="Birim Fiyat"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#d3d3d3"
        android:textCursorDrawable="@drawable/cursor_color"/>

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="GÜNCELLE" />




</LinearLayout>